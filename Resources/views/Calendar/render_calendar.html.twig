<div class="calendar" id="calendar-{{ calendar.getId() }}">
    <h1>{{ calendar.getName() }}</h1>
    <h3>{{ calendar.getDescription() }}</h3>
    <p>{% trans from 'LimeCalendarBundle' %}lime_calendar_owner{% endtrans %}: {{ calendar.getUser() is not empty ? calendar.getUser().getUsername(): 'null' }}</p>
    <div class="calendar-events">
        <h3>{% trans from 'LimeCalendarBundle' %}lime_calendar_events{% endtrans %} (<a href="{{ path(lime_calendar_route('event', 'create'), {"calendar_id": calendar.getId()}) }}">{% trans from 'LimeCalendarBundle' %}lime_calendar_add_event{% endtrans %}</a>)</h3>
        <ul>
{% if calendar.getEvents() | length == 0 %}
            <li>{% trans from 'LimeCalendarBundle' %}lime_calendar_none_yet{% endtrans %} <a href="{{ path(lime_calendar_route('event', 'create'), {"calendar_id": calendar.getId()}) }}">{% trans from 'LimeCalendarBundle' %}lime_calendar_create_one{% endtrans %}</a></li>
{% else %}
{% for event in calendar.getEvents() %}
            <li class="calendar-event"><a href="{{ path(lime_calendar_route('event', 'view'), {"id": event.getId()}) }}">{{ event.getName() }}</a></li>
{% endfor %}
{% endif %}
        </ul>
    </div>
</div>