<div class="calendar" id="calendar-{{ calendar.getId() }}">
    <h1>{{ calendar.getName() }}</h1>
    <h3>{{ calendar.getDescription() }}</h3>
    <p>Owner: {{ calendar.getUser() is not empty ? calendar.getUser().getUsername(): 'null' }}</p>
    <div class="calendar-events">
        <h3>Events (<a href="{{ path(lime_calendar_route('event', 'create'), {"id": calendar.getId()}) }}">add event</a>)</h3>
        <ul>
{% for event in calendar.getEvents() %}
            <li class="calendar-event">{% include "LimeCalendarBundle:Event:render_event.html.twig" %}</li>
{% endfor %}
        </ul>
    </div>
</div>